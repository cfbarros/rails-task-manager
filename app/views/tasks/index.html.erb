<h1>Task List</h1>

<ul>
  <% @tasks.each do |task| %>
    <% if task.completed == true %>
      <li>[X]<%= link_to task.title, task_path(task) %>
        <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
    <% else %>
      <li>[_]<%= link_to task.title, task_path(task) %>
        <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
     <% end %>
  <% end %>
</ul>
<br>
<p><%= link_to "+ Add a task", tasks_new_path %></p>

